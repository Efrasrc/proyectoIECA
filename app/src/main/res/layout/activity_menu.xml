<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:src="@drawable/picmenu"
        android:scaleType="centerCrop"
        android:padding="10dp">
    </ImageView>

    <Button
        android:id="@+id/resubtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Resumen de Curso"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp">
    </Button>

    <Button
        android:id="@+id/reglabtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Reglamento"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp">
    </Button>

    <Button
        android:id="@+id/temabtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Temario"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp">
    </Button>

    <Button
        android:id="@+id/sesiobtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Sesiones"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp">
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>